<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h1>New Review</h1>
          <%= simple_form_for [@restaurant, @review], html: {class: "form-horizontal"} do |f| %>
            <div class="form-group">
              <div class="col-md-9">
                <%= f.input :rating, as: :radio_buttons, collection: 0..5, item_wrapper_class: "form-check form-check-inline" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.input :content, label: "Review" %>
            </div>
            <div class="form-group">
              <%= f.submit "Submit Review", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
